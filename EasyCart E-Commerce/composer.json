{
    "name": "easycart/ecommerce",
    "description": "EasyCart E-Commerce Platform - PSR-4 MVC Refactored",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "EasyCart\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EasyCart\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}