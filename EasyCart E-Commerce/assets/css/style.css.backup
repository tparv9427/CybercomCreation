:root {
    --primary: #2D3142;
    --secondary: #BFC0C0;
    --accent: #EF8354;
    --soft-bg: #F8F9FA;
    --white: #FFFFFF;
    --text: #4A5568;
    --border: #E5E7EB;
    --card-bg: #FFFFFF;
    --gradient-1: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --gradient-2: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    --gradient-3: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    --shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    --shadow-hover: 0 20px 50px rgba(0, 0, 0, 0.12);
}

[data-theme="dark"] {
    --primary: #E5E7EB;
    --secondary: #4B5563;
    --soft-bg: #1F2937;
    --white: #111827;
    --text: #D1D5DB;
    --border: #374151;
    --card-bg: #1F2937;
    --shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    --shadow-hover: 0 20px 50px rgba(0, 0, 0, 0.5);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'DM Sans', sans-serif;
    background: var(--soft-bg);
    color: var(--text);
    line-height: 1.7;
    transition: background-color 0.3s ease, color 0.3s ease;
}

/* Header */
.header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: var(--shadow);
    transition: background-color 0.3s ease;
}

[data-theme="dark"] .header {
    background: rgba(31, 41, 55, 0.95);
}

.header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1.5rem 3rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo a {
    font-family: 'Cormorant Garamond', serif;
    font-size: 2.2rem;
    font-weight: 700;
    color: var(--primary);
    letter-spacing: 0.05em;
    text-decoration: none;
    transition: color 0.3s ease;
}

.nav {
    display: flex;
    gap: 2.5rem;
    align-items: center;
}

.nav a {
    text-decoration: none;
    color: var(--text);
    font-weight: 500;
    font-size: 0.95rem;
    position: relative;
    transition: color 0.3s;
}

.nav a::before {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: var(--accent);
    transition: width 0.3s;
}

.nav a:hover {
    color: var(--primary);
}

.nav a:hover::before {
    width: 100%;
}

.cart-link, .wishlist-link {
    position: relative;
}

.badge {
    position: absolute;
    top: -8px;
    right: -12px;
    background: var(--accent);
    color: white;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.7rem;
    font-weight: 700;
}

/* Dropdown */
.dropdown {
    position: relative;
}

.dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: var(--card-bg);
    min-width: 200px;
    box-shadow: var(--shadow);
    border-radius: 8px;
    padding: 0.5rem 0;
    margin-top: 0.5rem;
}

.dropdown:hover .dropdown-menu {
    display: block;
}

.dropdown-menu a {
    display: block;
    padding: 0.75rem 1.5rem;
    color: var(--text);
    transition: background 0.3s;
}

.dropdown-menu a:hover {
    background: var(--soft-bg);
}

.dropdown-menu a::before {
    display: none;
}

/* Theme Toggle */
.theme-toggle {
    background: var(--soft-bg);
    border: 2px solid var(--border);
    border-radius: 50px;
    padding: 0.5rem 1rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s;
}

.theme-toggle:hover {
    border-color: var(--accent);
}

.sun-icon, .moon-icon {
    font-size: 1.2rem;
    transition: transform 0.3s;
}

[data-theme="light"] .moon-icon,
[data-theme="dark"] .sun-icon {
    display: none;
}

/* Banner Carousel */
.banner-carousel {
    height: 550px;
    position: relative;
    overflow: hidden;
}

.banner-slide {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    animation: elegantSlide 21s infinite;
}

.banner-slide:nth-child(1) {
    background: var(--gradient-1);
    animation-delay: 0s;
}

.banner-slide:nth-child(2) {
    background: var(--gradient-2);
    animation-delay: 7s;
    opacity: 0;
}

.banner-slide:nth-child(3) {
    background: var(--gradient-3);
    animation-delay: 14s;
    opacity: 0;
}

@keyframes elegantSlide {
    0% { opacity: 0; transform: scale(1.1); }
    4% { opacity: 1; transform: scale(1); }
    33% { opacity: 1; transform: scale(1); }
    37% { opacity: 0; transform: scale(0.95); }
    100% { opacity: 0; transform: scale(0.95); }
}

.banner-content {
    text-align: center;
    max-width: 900px;
    padding: 3rem;
}

.banner-content h1 {
    font-family: 'Cormorant Garamond', serif;
    font-size: 4.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.1;
}

.banner-content p {
    font-size: 1.3rem;
    margin-bottom: 2.5rem;
    opacity: 0.95;
    font-weight: 300;
}

/* Container */
.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 4rem 3rem;
}

.section-header {
    margin-bottom: 3rem;
    text-align: center;
}

.section-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 3rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 0.5rem;
}

.section-subtitle {
    color: var(--secondary);
    font-size: 1.1rem;
}

/* Breadcrumb */
.breadcrumb {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1.5rem 3rem;
    font-size: 0.9rem;
    color: var(--secondary);
}

.breadcrumb a {
    color: var(--secondary);
    text-decoration: none;
    transition: color 0.3s;
}

.breadcrumb a:hover {
    color: var(--accent);
}

/* Filter Bar */
.filter-bar {
    background: var(--card-bg);
    padding: 2rem;
    border-radius: 20px;
    margin-bottom: 3rem;
    box-shadow: var(--shadow);
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
}

.filter-container {
    display: flex;
    flex-wrap: wrap;
    gap: 2.5rem;
    margin-bottom: 1.5rem;
}

.filter-group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.filter-label {
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--primary);
}

.filter-options {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
}

.filter-btn {
    padding: 0.6rem 1.5rem;
    border: 1.5px solid var(--border);
    background: transparent;
    border-radius: 50px;
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.3s;
    color: var(--text);
}

.filter-btn:hover {
    border-color: var(--accent);
    color: var(--accent);
}

.filter-btn.active {
    background: var(--accent);
    color: white;
    border-color: var(--accent);
}

.view-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
}

.results-count {
    color: var(--secondary);
    font-size: 0.95rem;
}

.view-toggle {
    display: flex;
    gap: 0.5rem;
    background: var(--soft-bg);
    padding: 0.3rem;
    border-radius: 12px;
}

.view-btn {
    width: 45px;
    height: 45px;
    border: none;
    background: transparent;
    border-radius: 10px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    color: var(--text);
    font-size: 1.2rem;
}

.view-btn:hover,
.view-btn.active {
    background: var(--card-bg);
    color: var(--primary);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

/* Product Grid */
.product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2.5rem;
}

.product-card {
    background: var(--card-bg);
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    box-shadow: var(--shadow);
    position: relative;
}

.product-card:hover {
    transform: translateY(-12px);
    box-shadow: var(--shadow-hover);
}

.product-image {
    width: 100%;
    height: 350px;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 4rem;
    position: relative;
    overflow: hidden;
}

[data-theme="dark"] .product-image {
    background: linear-gradient(135deg, #374151 0%, #1F2937 100%);
}

.product-badge {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    background: rgba(239, 131, 84, 0.95);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-size: 0.8rem;
    font-weight: 600;
    backdrop-filter: blur(10px);
}

.product-badge.new {
    background: rgba(76, 175, 80, 0.95);
}

.wishlist-btn {
    position: absolute;
    top: 1.5rem;
    left: 1.5rem;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    width: 45px;
    height: 45px;
    border-radius: 50%;
    cursor: pointer;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    backdrop-filter: blur(10px);
}

.wishlist-btn:hover {
    transform: scale(1.1);
}

.wishlist-btn.active {
    animation: heartBeat 0.5s;
}

@keyframes heartBeat {
    0%, 100% { transform: scale(1); }
    25% { transform: scale(1.3); }
    50% { transform: scale(1.1); }
    75% { transform: scale(1.25); }
}

.product-info {
    padding: 2rem;
}

.product-category {
    font-size: 0.8rem;
    color: var(--secondary);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
}

.product-name {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--primary);
}

.product-price {
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 0.75rem;
}

.product-price-original {
    text-decoration: line-through;
    color: var(--secondary);
    font-size: 1.1rem;
    margin-left: 0.5rem;
}

.product-rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: var(--secondary);
}

.stars {
    color: #FFA500;
}

/* Product Row View */
.product-row {
    display: none;
    flex-direction: column;
    gap: 2rem;
}

.product-row.active {
    display: flex;
}

.product-row-item {
    background: var(--card-bg);
    border-radius: 20px;
    display: grid;
    grid-template-columns: 300px 1fr;
    overflow: hidden;
    transition: all 0.4s;
    cursor: pointer;
    box-shadow: var(--shadow);
}

.product-row-item:hover {
    box-shadow: var(--shadow-hover);
    transform: translateX(8px);
}

.product-row-image {
    width: 100%;
    height: 100%;
    min-height: 280px;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 5rem;
    position: relative;
}

[data-theme="dark"] .product-row-image {
    background: linear-gradient(135deg, #374151 0%, #1F2937 100%);
}

.product-row-info {
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
}

.product-row-desc {
    font-size: 1.05rem;
    margin: 1.5rem 0;
    line-height: 1.7;
    color: var(--text);
}

/* Buttons */
.btn {
    padding: 1rem 2.5rem;
    border: none;
    background: var(--accent);
    color: white;
    font-weight: 600;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.3s;
    font-size: 1rem;
    box-shadow: 0 4px 15px rgba(239, 131, 84, 0.3);
    text-decoration: none;
    display: inline-block;
}

.btn:hover {
    background: #E67442;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(239, 131, 84, 0.4);
}

.btn-outline {
    background: transparent;
    border: 2px solid var(--accent);
    color: var(--accent);
    box-shadow: none;
}

.btn-outline:hover {
    background: var(--accent);
    color: white;
}

.btn-secondary {
    background: var(--primary);
    box-shadow: 0 4px 15px rgba(45, 49, 66, 0.3);
}

.btn-secondary:hover {
    background: var(--text);
}

/* Alert Messages */
.alert {
    padding: 1rem 1.5rem;
    border-radius: 12px;
    margin-bottom: 1.5rem;
    font-weight: 500;
}

.alert-success {
    background: #D1FAE5;
    color: #065F46;
    border: 1px solid #A7F3D0;
}

.alert-error {
    background: #FEE2E2;
    color: #991B1B;
    border: 1px solid #FECACA;
}

.alert-info {
    background: #DBEAFE;
    color: #1E40AF;
    border: 1px solid #BFDBFE;
}

/* Footer */
.footer {
    background: var(--primary);
    color: white;
    padding: 4rem 3rem 2rem;
    margin-top: 6rem;
}

[data-theme="dark"] .footer {
    background: var(--white);
}

.footer-container {
    max-width: 1400px;
    margin: 0 auto;
}

.footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
}

.footer-section h3 {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.8rem;
    margin-bottom: 1rem;
}

.footer-section h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    font-weight: 600;
}

.footer-section ul {
    list-style: none;
}

.footer-section ul li {
    margin-bottom: 0.5rem;
}

.footer-section a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.3s;
}

.footer-section a:hover {
    color: white;
}

.footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    opacity: 0.7;
}

/* Responsive */
@media (max-width: 1024px) {
    .header-container {
        padding: 1.5rem 2rem;
    }

    .container {
        padding: 3rem 2rem;
    }

    .nav {
        gap: 1.5rem;
    }

    .product-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    }

    .product-row-item {
        grid-template-columns: 1fr;
    }

    .product-row-image {
        min-height: 250px;
    }
}

@media (max-width: 768px) {
    .banner-content h1 {
        font-size: 2.5rem;
    }

    .section-title {
        font-size: 2rem;
    }

    .nav {
        flex-wrap: wrap;
        gap: 1rem;
    }

    .product-grid {
        grid-template-columns: 1fr;
    }

    .filter-container {
        flex-direction: column;
        gap: 1.5rem;
    }
}
